{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Tests with Coverage",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--cov=."
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--cov=."
            ],
            "justMyCode": false,
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}
